  "scripts": {
    "generate": "plop",
    "clear": "rm -rf ./build",
    "prestart": "yarn clear",
    "start": "gulp watch",
    "format:styles": "gulp format:styles",
    "lint": "yarn lint:styles && yarn lint:scripts",
    "prelint:styles": "yarn format:styles",
    "lint:styles": "stylelint source/**/*.css",
    "lint:scripts": "eslint {gulp,source}",
    "test": "jest",
    "build:development": "cross-env NODE_ENV=development gulp build",
    "build:production": "cross-env NODE_ENV=production gulp build",
    "prebuild": "yarn clear",
    "build": "yarn build:development",
    "qa": "yarn lint && yarn test",
    "deploy": "yarn qa && yarn build:production && gulp deploy",
    "precommit": "yarn qa"
  },
