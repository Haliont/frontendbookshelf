{
  "name": "frontendbookshelf",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:andrew--r/frontendbookshelf.git",
  "author": "Andrew Romanov <me@andrew-r.ru>",
  "license": "MIT",
  "scripts": {
    "generate": "./node_modules/.bin/plop",
    "clear": "rm -rf ./build",
    "start": "yarn clear && $(yarn bin)/gulp watch",
    "lint": "yarn lint:styles & yarn lint:scripts",
    "lint:styles": "$(yarn bin)/stylelint source/**/*.css",
    "lint:scripts": "$(yarn bin)/eslint source/**/*.js",
    "format:styles": "$(yarn bin)/gulp format:styles",
    "build": "yarn build:development",
    "build:production": "yarn clear && $(yarn bin)/cross-env NODE_ENV=production $(yarn bin)/gulp build",
    "build:development": "yarn clear && $(yarn bin)/cross-env NODE_ENV=development $(yarn bin)/gulp build",
    "precommit": "yarn format:styles && yarn lint"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "bemto.pug": "^2.1.0",
    "browser-sync": "^2.18.6",
    "cross-env": "^3.1.4",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "glob": "^7.1.1",
    "gulp": "^3.9.1",
    "gulp-csso": "^2.0.0",
    "gulp-data": "^1.2.1",
    "gulp-imagemin": "^3.1.1",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.2.0",
    "gulp-pug": "^3.2.0",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^2.0.0",
    "gulp-util": "^3.0.8",
    "husky": "^0.13.1",
    "plop": "^1.7.3",
    "postcss-cssnext": "^2.9.0",
    "postcss-easy-import": "^1.0.1",
    "postcss-reporter": "^3.0.0",
    "postcss-sorting": "^2.0.1",
    "require-dir": "^0.3.1",
    "stylelint": "^7.7.1",
    "webpack-stream": "^3.2.0"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
